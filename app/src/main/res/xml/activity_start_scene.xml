<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    >
    <Transition
        android:id="@+id/forward"
        app:constraintSetEnd="@id/next"
        app:constraintSetStart="@+id/start"
        app:duration="200">
        <OnSwipe app:dragDirection="dragLeft"
            app:touchAnchorSide="left" />
        <OnClick motion:targetId="@id/modeX"
            motion:clickAction="transitionToStart"
            />
    </Transition>
    <Transition
        app:constraintSetEnd="@id/next"
        app:constraintSetStart="@+id/start"
        app:duration="200">
        <OnClick motion:targetId="@id/modeY"
            motion:clickAction="transitionToEnd"
            />
    </Transition>
    <Transition
        android:id="@+id/backward"
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/previous"
        app:duration="200">
        <OnSwipe app:dragDirection="dragRight"
            app:touchAnchorSide="right" />
        <OnClick motion:targetId="@id/modeX"
            motion:clickAction="transitionToEnd"
            />
    </Transition>
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/previous"
        app:duration="200">
        <OnClick motion:targetId="@id/modeY"
            motion:clickAction="transitionToStart"
            />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/mode1"
            android:layout_height="100dp"
            app:layout_constraintEnd_toStartOf="@+id/mode2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_marginStart="10dp"
            android:alpha="0.8" />
        <Constraint
            android:id="@+id/mode2"
            app:layout_constraintEnd_toStartOf="@+id/mode3"
            app:layout_constraintStart_toEndOf="@+id/mode1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/mode3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mode2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:alpha="0.8" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/next">
        <Constraint
            android:id="@+id/mode2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mode3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:alpha="0.8" />
        <Constraint
            android:id="@+id/mode3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintVertical_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:id="@+id/mode1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"
            app:layout_constraintVertical_bias="0.499"
            app:layout_constraintEnd_toStartOf="parent"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/previous" >
        <Constraint
            android:id="@+id/mode1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/mode2"
            app:layout_constraintStart_toEndOf="@+id/mode1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:alpha="0.8" />
        <Constraint
            android:id="@+id/mode3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:visibility="invisible" />
    </ConstraintSet>


</MotionScene>