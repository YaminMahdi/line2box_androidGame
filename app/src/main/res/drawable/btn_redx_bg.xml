<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/redX" />
            <solid android:color="@color/redY"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/redX" />
            <solid android:color="@color/redY"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/grayY" />
            <solid android:color="@color/grayX"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="3dp" android:color="@color/redY" />
            <solid android:color="@color/redX"/>
        </shape>
    </item>
</selector>