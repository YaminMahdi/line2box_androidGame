<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/updateLayoutDialogUI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="150dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/box"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/warningMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/sortie"
        android:gravity="center"
        android:text="No Internet !"
        android:textColor="@color/redY"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/UpdateInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You must have INTERNET connection for the first time to run the game"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/whiteY"
        android:fontFamily="@font/sortie"
        android:layout_marginHorizontal="24dp"
        />
    <LinearLayout
        android:id="@+id/googlePlayWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"

        >

        <TextView
            android:id="@+id/playSvLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/paapri"
            android:paddingVertical="5sp"
            android:paddingStart="10dp"
            android:paddingEnd="12sp"
            android:text="@string/play_services"
            android:textColor="@color/blueZ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_special_bg"
            />
        <TextView
            android:id="@+id/playGmLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/paapri"
            android:paddingVertical="5sp"
            android:paddingStart="10dp"
            android:paddingEnd="12sp"
            android:text="@string/play_game"
            android:textColor="@color/blueZ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_special_bg"
            />
    </LinearLayout>
    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:text="Retry"
        android:background="@drawable/btn_grn_bg"
        android:fontFamily="@font/sortie"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="18sp"
        tools:ignore="ButtonStyle" />

</LinearLayout>
