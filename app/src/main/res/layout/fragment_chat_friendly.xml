        <Button
            android:id="@+id/sendCry"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ˜­"
            android:textSize="35sp"
            android:background="@drawable/btn_special_bg"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/sendScream"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ˜±"
            android:textSize="35sp"
            android:background="@drawable/btn_special_bg"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/sendKiss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ˜˜"
            android:textSize="35sp"
            android:background="@drawable/btn_special_bg"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/sendYawn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_special_bg"
            android:text="ðŸ¥±"
            android:textSize="35sp"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/lin"
        android:background="@drawable/side_nav_bar"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chatBoxFriendly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1.4"
            android:background="@drawable/box_chat"
            android:fontFamily="@font/sortie"
            android:hint="Type Here..."
            android:paddingHorizontal="20dp"
            android:textColor="@color/cocZz"
            android:textColorHint="@color/cocZ"
            android:textSize="20sp"
            android:lineSpacingExtra="5sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <ImageButton
            android:id="@+id/msgSendBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="9.5dp"
            android:layout_weight=".5"
            android:background="@drawable/btn_send_bg"
            android:src="@drawable/icon_send"
            app:tint="#E0D89F"
            />

    </LinearLayout>


</RelativeLayout>